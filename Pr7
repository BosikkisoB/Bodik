#include <stdio.h>
#include <math.h>

int main()
{
    // Змінні для координат та радіусів двох кола
    double x1, y1, r1, x2, y2, r2;

    // Змінна для збереження відстані між центрами кола
    double distance;

    // Змінна для збереження кількості точок перетину
    int intersection_points = 0;

    // Ввід координат та радіусів двох кола від користувача
    printf("Input x1, y1, r1, x2, y2, r2: ");
    scanf("%lf %lf %lf %lf %lf %lf", &x1, &y1, &r1, &x2, &y2, &r2);

    // Обчислення відстані між центрами кола за допомогою формули відстані між двома точками
    distance = sqrt(pow(x2 - x1, 2) + pow(y2 - y1, 2));

    // Перевірка наявності точок перетину між колами
    if (distance == 0 && r1 == r2)
    {
        // Якщо кола збігаються і мають однаковий радіус, то вони мають безліч точок перетину
        intersection_points = -1;
    }
    else if (distance <= r1 + r2 && distance >= fabs(r1 - r2))
    {
        // Якщо відстань між центрами кола менша або рівна суми радіусів і більша або рівна різниці радіусів,
        // то кола перетинаються або торкаються одне одного

        if (distance < r1 + r2 || distance == fabs(r1 - r2))
            intersection_points = 2; // Кола перетинаються у двох точках
        else
            intersection_points = 1; // Одне коло торкається зовнішньо іншого кола
    }

    // Виведення кількості точок перетину
    printf("Кількість точок перетину: %d\n", intersection_points);

    return 0;
}
