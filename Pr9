#include <stdio.h> // Підключаємо бібліотеку для введення/виведення даних.

int function(int x, int y) // Оголошуємо функцію, яка обчислює кількість кроків між двома числами.
{
   // Створюємо цикл, щоб обчислити кількість кроків (якщо x = y, то кількість кроків буде 0).
   if (x == y)
   {
      return 0; // Якщо x дорівнює y, повертаємо 0.
   }

   int a = 1, b = y - x; // Ініціалізуємо змінні a та b для обчислення кількості кроків.

   while (b > a) // Виконуємо цикл, доки b більше за a.
   {
      if (b <= 2 * a) // Якщо b менше або дорівнює подвоєному значенню a.
      {
         b = 0; // Зробити b рівним 0.
      }
      a++; // Збільшити значення a на 1.
   }

   return a; // Повертаємо значення a - кількість кроків.
}

int main()
{
   int x, y; // Оголошуємо змінні x та y для збереження введених чисел.

   printf("Enter x: "); // Виводимо повідомлення для введення x.
   scanf("%d", &x); // Зчитуємо значення x з консолі.

   printf("Enter y: "); // Виводимо повідомлення для введення y.
   scanf("%d", &y); // Зчитуємо значення y з консолі.

   printf("\nResult: %d", function(x, y)); // Виводимо результат обчислення кількості кроків.

   return 0; // Повертаємо 0, що означає успішне завершення програми.
}
